open NetKAT.Std

// basic flood policy:
let flood : policy =
	<:netkat<
		if port = 1 then port:= 2 + port := 3
		else if port = 2 then port := 1 + port := 3
		else if port = 3 then port := 1+ port:= 2
		else drop

	>>

let += run_static flood

